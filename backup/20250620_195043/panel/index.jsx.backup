import { component$, useSignal, $, useStore, useTask$ } from '@builder.io/qwik';
import { useNavigate } from '@builder.io/qwik-city';
import { PanelLogin } from '~/components/panel/PanelLogin';
import { PanelLayout } from '~/components/panel/PanelLayout';
import { checkPanelSession, createPanelSession, clearPanelSession } from '~/services/auth.js';

export const head = {
  title: 'Yönetim Paneli | Ayvera Güvenlik',
  meta: [
    { name: 'description', content: 'Ayvera Güvenlik yönetim paneli - Ürün yönetimi' },
    { name: 'robots', content: 'noindex, nofollow' }
  ]
};

export default component$(() => {
  const password = useSignal('');
  const error = useSignal('');
  const state = useStore({ isAuth: false });
  const config = useStore({ panelPassword: 'admin123', loaded: true });

  const handleLogin = $(async (inputPassword) => {
    if (inputPassword === config.panelPassword) {
      state.isAuth = true;
      error.value = '';
      console.log('✅ Panel girişi başarılı');
    } else {
      error.value = 'Hatalı şifre!';
      console.log('❌ Panel girişi başarısız');
    }
  });

  const handleLogout = $(() => {
    state.isAuth = false;
    password.value = '';
    error.value = '';
    console.log('🔒 Panel çıkışı yapıldı');
  });

  return (
    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
      {!state.isAuth ? (
        // Giriş ekranı
        <div class="flex items-center justify-center min-h-screen p-4">
          <div class="w-full max-w-md">
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl border border-white/20 p-8">
              <div class="text-center mb-8">
                <h1 class="text-2xl font-bold text-white mb-2">Panel Giriş</h1>
                <p class="text-gray-300 text-sm">Şifre: admin123</p>
              </div>

              <div class="space-y-6">
                <div>
                  <input
                    type="password"
                    bind:value={password}
                    placeholder="Şifrenizi girin..."
                    class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    onKeyDown$={$(async (e) => {
                      if (e.key === 'Enter') {
                        await handleLogin(password.value);
                      }
                    })}
                  />
                </div>

                {error.value && (
                  <div class="p-3 bg-red-500/10 border border-red-500/20 rounded-lg">
                    <p class="text-red-300 text-sm text-center">{error.value}</p>
                  </div>
                )}

                <button
                  type="button"
                  onClick$={$(async () => await handleLogin(password.value))}
                  class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg transition-all"
                >
                  Giriş Yap
                </button>
              </div>
            </div>
          </div>
        </div>
      ) : (
        // Panel içeriği
        <div class="min-h-screen bg-gray-50">
          <header class="bg-white shadow-sm border-b border-gray-200">
            <div class="px-6 py-4 flex items-center justify-between">
              <h1 class="text-xl font-bold">Ayvera Panel</h1>
              <button
                onClick$={handleLogout}
                class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600"
              >
                Çıkış
              </button>
            </div>
          </header>
          <div class="p-6">
            <h2 class="text-2xl font-bold mb-4">Panel Başarıyla Yüklendi!</h2>
            <p>Tüm fonksiyonlar çalışıyor.</p>
          </div>
        </div>
      )}
    </div>
  );
});
